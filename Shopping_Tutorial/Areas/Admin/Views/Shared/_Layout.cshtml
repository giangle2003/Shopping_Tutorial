			var message1 = '@Html.Raw(TempData["errorr"])'.trim();
			console.log("TempData message: " + message); // Debug kiểm tra giá trị
			console.log("TempData errorr: " + message1); // Debug kiểm tra giá trị

			if (message !== '' && message !== 'null' && message !== 'undefined') {
				Swal.fire({
					title: message,
					icon: "success",
					timer: 2000
				});
				
			}
			// Hiển thị thông báo lỗi
		if (message1 !== '' && message1 !== 'null' && message1 !== 'undefined') {
			Swal.fire({
				icon: "error",
				title: "Oops...",
				text: message1,
			});
		}
		});
	</script>
