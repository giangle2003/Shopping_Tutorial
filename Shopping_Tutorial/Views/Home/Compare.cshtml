@{
    ViewData["title"] = "List Compare";
    var key = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h3 style="text-align:center">DANH SÁCH SO SÁNH SẢN PHẨM</h3>


    <div class="table-responsive">

        <table class="table table-bordered table-hover text-center" id="myTable">
            <thead>
            <tr>
                <th>Id</th>
                <th>Tên sản phẩm</th>
                <th>Giá sản phẩm</th>
                <th>Hình ảnh sản phẩm</th>
                <th>Lựa chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compare_product in Model)
            {
                key++;
                <tr>
                    <td>@key</td>
                    <td>
                        <a asp-action="Details" asp-controller="Product" asp-route-Id="@compare_product.ProductId">
                            @compare_product.Product.Name
                        </a>
                    </td>
                    <td>@compare_product.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@compare_product.Product.Image" width="120px" height="150px" /> </td>
                    <td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Compares.Id">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <partial name="_NotificationPartial" />
    
</body>

</html>
