@model Shopping_Tutorial.Models.Paginate;

<div class="container">
    @if (Model.TotalPages > 0) //2 trang
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="1">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">
                        &lt;
                    </a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++) //1 = 1 <= 2
            {
                <li class="page-item @(pge==Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>


            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage+1)">
                        &gt;
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.TotalPages)">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            }
        </ul>
    }
</div>