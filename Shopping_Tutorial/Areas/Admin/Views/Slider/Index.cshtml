@model IEnumerable<SliderModel>
@{
    ViewData["Title"] = "Danh sách Slider";
}

<h3>List Sliders</h3>

<a class="btn btn-primary" asp-action="Create" asp-controller="Slider">Thêm Slider</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên Slider</th>
            <th>Mô tả</th>
            <th>Hình ảnh</th>
            <th>Trạng thái</th>
            <th>Lựa chọn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td><img src="~/media/sliders/@item.Image" width="400px" height="200px" /></td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Slider" asp-route-Id="@item.Id">
                        <i class="fas fa-pencil-alt"></i>
                        &nbsp;
                        Sửa
                    </a>
                    <a class="btn btn-danger btn-sm delete-link" asp-action="Delete" asp-controller="Slider" asp-route-Id="@item.Id">
                        <i class="fas fa-trash"></i>
                        &nbsp;
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>