@model ContactModel
<div class="container">
    <div class="row">
        <!-- Thông tin công ty -->
        <div class="col-sm-12 col-md-4 text-center">
            <div class="companyinfo">
                <img src="~/media/logo/@Model.LogoImg" width="200px" height="120px" class="img-responsive center-block" alt="Company Logo" />
                <p class="mt-3">@Html.Raw(@Model.Description)</p>
            </div>
        </div>

        <!-- Bản đồ -->
        <div class="col-sm-12 col-md-4">
            @Html.Raw(@Model.Map)
        </div>

        <!-- Thông tin liên hệ -->
        <div class="col-sm-12 col-md-4">
            <div class="address">
                <h4><b>@Model.Name</b></h4>
                <h5>Email: <a href="mailto:@Model.Email">@Model.Email</a></h5>
                <h5>Hotline: @Model.Phone</h5>
            </div>
        </div>
    </div>
</div>
