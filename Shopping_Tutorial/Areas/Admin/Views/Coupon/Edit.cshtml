@using Shopping_Tutorial.Models.ViewModels
@model CouponViewModel
@{
    ViewData["title"] = "Edit Coupon";
}
<style>
    .custom-back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #007bff;
        border-radius: 8px;
        text-decoration: none;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

        .custom-back-btn:hover {
            background: #0056b3;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        }
</style>

<h4>Sửa mã giảm giá</h4>
<div class="col-9">
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control"> </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Ngày bắt đầu</label>
            <input asp-for="DateStar" class="form-control" />
            <span asp-validation-for="DateStar" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Ngày kết thúc</label>
            <input asp-for="DateExpired" class="form-control" />
            <span asp-validation-for="DateExpired" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Số lượng</label>
            <input asp-for="Quantity" min="1" value="1" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Giảm giá theo %</label>
            <input asp-for="DiscountPercent" class="form-control" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Giảm giá tối đa</label>
            <input asp-for="MaxDiscountAmount" class="form-control" />
            <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Giảm giá theo số tiền</label>
            <input asp-for="DiscountPrice" class="form-control" />
            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Trạng thái</label>
            <select name="Status" class="form-control">
                <option value="1">Kích hoạt</option>
                <option value="0">Ẩn</option>
            </select>
        </div>
        <div class="form-group">
            <label>Áp dụng cho danh mục</label><br />
            @foreach (var category in Model.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="SelectedCategoryIds"
                           value="@category.Id"
                    @(Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                    <label class="form-check-label">@category.Name</label>
                </div>
            }
        </div>
        <div class="form-group">
            <button class="btn btn-primary">
                Sửa
            </button>
        </div>
    </form>
    <a asp-action="Index" class="custom-back-btn"><i class="fa-solid fa-arrow-left"></i> Trở về trang Danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



